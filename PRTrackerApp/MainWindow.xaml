<Window x:Class="PRTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PR Tracker" Height="1000" Width="1400">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Input Fields -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
                <!-- All fields from prtable -->
                <WrapPanel Margin="0,5">
                    <TextBlock Text="PR ID:" Width="150"/>
                    <TextBox x:Name="PRIdTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Summary:" Width="150"/>
                    <TextBox x:Name="SummaryTextBox" Width="400"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Manager Name:" Width="150"/>
                    <TextBox x:Name="ManagerTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Engineer Name:" Width="150"/>
                    <TextBox x:Name="EngineerTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Severity:" Width="150"/>
                    <ComboBox x:Name="SeverityComboBox" Width="200">
                        <ComboBoxItem Content="Critical"/>
                        <ComboBoxItem Content="Major"/>
                        <ComboBoxItem Content="Minor"/>
                    </ComboBox>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Status:" Width="150"/>
                    <ComboBox x:Name="StatusComboBox" Width="200">
                        <ComboBoxItem Content="Canceled"/>
                        <ComboBoxItem Content="Closed"/>
                        <ComboBoxItem Content="Duplicate"/>
                        <ComboBoxItem Content="Evaluating"/>
                        <ComboBoxItem Content="Feedback"/>
                        <ComboBoxItem Content="Informational"/>
                        <ComboBoxItem Content="Monitoring"/>
                        <ComboBoxItem Content="Open"/>
                        <ComboBoxItem Content="Verify"/>
                        <ComboBoxItem Content="Deleted"/>
                        <ComboBoxItem Content="Deferred"/>
                    </ComboBox>
                </WrapPanel>

                <WrapPanel Margin="0,5">
                    <TextBlock Text="Tester Name:" Width="150"/>
                    <TextBox x:Name="TesterTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Category:" Width="150"/>
                    <TextBox x:Name="CategoryTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Sub-Category:" Width="150"/>
                    <TextBox x:Name="SubCategoryTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Meeting Minutes:" Width="150"/>
                    <TextBox x:Name="MeetingMinutesTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="RTR:" Width="150"/>
                    <TextBox x:Name="RtrTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="PR Active:" Width="150"/>
                    <TextBox x:Name="PRActiveTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Action Owner:" Width="150"/>
                    <TextBox x:Name="ActionOwnerTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Age:" Width="150"/>
                    <TextBox x:Name="AgeTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Engineering Comment:" Width="150"/>
                    <TextBox x:Name="EngineeringCommentTextBox" Width="400"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="# Blocking TCs:" Width="150"/>
                    <TextBox x:Name="NumBlockingTCTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Release:" Width="150"/>
                    <TextBox x:Name="PRReleaseTextBox" Width="200"/>
                </WrapPanel>
                
                <WrapPanel Margin="0,5">
                    <TextBlock Text="PR Origin:" Width="150"/>
                    <ComboBox x:Name="PROriginComboBox" Width="300">
                        <ComboBoxItem Content="Testing Engineering"/>
                        <ComboBoxItem Content="Customer Service"/>
                        <ComboBoxItem Content="SQA"/>
                        <ComboBoxItem Content="Engineering"/>
                        <ComboBoxItem Content="Simulation"/>
                        <ComboBoxItem Content="HQA"/>
                        <ComboBoxItem Content="Manufacturing"/>
                        <ComboBoxItem Content="Dev-AOS-Reuse"/>
                        <ComboBoxItem Content="MIS"/>
                        <ComboBoxItem Content="PT-AOS-Reuse"/>
                        <ComboBoxItem Content="SQA-Delta"/>
                    </ComboBox>
                </WrapPanel>


                <WrapPanel Margin="0,5">
                    <TextBlock Text="Product:" Width="150"/>
                    <TextBox x:Name="ProductTextBox" Width="200"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Blocking:" Width="150"/>
                    <TextBox x:Name="BlockingTextBox" Width="200"/>
                </WrapPanel>

                <WrapPanel Margin="0,5">
                    <TextBlock Text="RCA:" Width="150"/>
                    <ComboBox x:Name="RCATextBox" Width="300">
                        <ComboBoxItem Content="noRCA"/>
                        <ComboBoxItem Content="minorCE"/>
                        <ComboBoxItem Content="largeCE"/>
                        <ComboBoxItem Content="minorDesign"/>
                        <ComboBoxItem Content="majorDesign"/>
                        <ComboBoxItem Content="merge"/>
                        <ComboBoxItem Content="designComm"/>
                        <ComboBoxItem Content="duplicate"/>
                        <ComboBoxItem Content="existing"/>
                        <ComboBoxItem Content="nofix"/>
                        <ComboBoxItem Content="collateralDamage"/>
                        <ComboBoxItem Content="scalability"/>
                        <ComboBoxItem Content="user"/>
                        <ComboBoxItem Content="invalidTest"/>
                        <ComboBoxItem Content="unknown"/>
                        <ComboBoxItem Content="linux"/>
                        <ComboBoxItem Content="hw"/>
                        <ComboBoxItem Content="other"/>
                        <ComboBoxItem Content="reqUnclear"/>
                        <ComboBoxItem Content="extern(BCM)"/>
                        <ComboBoxItem Content="Deferred"/>
                    </ComboBox>
                </WrapPanel>

                <WrapPanel Margin="0,5">
                    <TextBlock Text="RCA Summary:" Width="150"/>
                    <TextBox x:Name="RCASummaryTextBox" Width="400"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="RCA Action:" Width="150"/>
                    <ComboBox x:Name="RCAActionComboBox" Width="300">
                        <ComboBoxItem Content="noAction"/>
                        <ComboBoxItem Content="addUT"/>
                        <ComboBoxItem Content="addPALTest"/>
                        <ComboBoxItem Content="informReviewer"/>
                        <ComboBoxItem Content="informArchitecture"/>
                    </ComboBox>
                </WrapPanel>

                <WrapPanel Margin="0,5">
                    <TextBlock Text="RCA Type:" Width="150"/>
                    <ComboBox x:Name="RCATypeComboBox" Width="300">
                        <ComboBoxItem Content="Undefined"/>
                        <ComboBoxItem Content="newCode"/>
                        <ComboBoxItem Content="Existing"/>
                        <ComboBoxItem Content="Broken"/>
                        <ComboBoxItem Content="N/A"/>
                    </ComboBox>
                </WrapPanel>


                <WrapPanel Margin="0,5">
                    <TextBlock Text="VTBF Age:" Width="150"/>
                    <TextBox x:Name="VTBFAgeTextBox" Width="200"/>
                </WrapPanel>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="PRDataGrid" Grid.Row="1" AutoGenerateColumns="True"
                      Margin="0,10,0,10" SelectionChanged="PRDataGrid_SelectionChanged"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Clear Form" Click="ClearForm_Click" Width="120" Margin="5" Background="LightGray"/>
                <Button Content="Create PR" Click="CreatePR_Click" Width="120" Margin="5" Background="LightGreen"/>
                <Button Content="Update PR" Click="UpdatePR_Click" Width="120" Margin="5" Background="Khaki"/>
                <Button Content="Delete PR" Click="DeletePR_Click" Width="120" Margin="5" Background="LightCoral"/>
                <Button Content="Load PRs" Click="LoadPRs_Click" Width="120" Margin="5"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>

